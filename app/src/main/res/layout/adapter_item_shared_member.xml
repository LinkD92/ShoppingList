<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvItemSharedMemeberEmail"
        android:layout_width="0dp"
        android:text="Example"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ibtnItemRemoveMember"
        />
    <ImageButton
        android:id="@+id/ibtnItemRemoveMember"
        android:src="@drawable/ic_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvItemSharedMemeberEmail"
        app:layout_constraintBottom_toBottomOf="@+id/tvItemSharedMemeberEmail"
        />

</androidx.constraintlayout.widget.ConstraintLayout>