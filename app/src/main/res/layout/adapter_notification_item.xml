<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="@color/backgroundSecondary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvLogListName"
        android:layout_marginLeft="8dp"
        android:text="List Name"
        android:textColor="@color/viewBackgroundPrimary"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/ibtnLogRemove"
        app:layout_constraintBottom_toBottomOf="@+id/ibtnLogRemove"
        />

    <TextView
        android:id="@+id/tvLogProductName"
        android:text="Prduct Name"
        android:layout_marginLeft="8dp"
        android:textSize="16dp"
        android:textColor="@color/viewBackgroundPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tvLogListName"
        app:layout_constraintRight_toLeftOf="@+id/tvLogExpirationDays"
        app:layout_constraintTop_toTopOf="@+id/tvLogListName"/>

    <TextView
        android:id="@+id/tvLogExpirationDays"
        android:text="10"
        android:textSize="16dp"
        android:textColor="@color/viewBackgroundPrimary"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/ibtnLogRemove"
        app:layout_constraintTop_toTopOf="@+id/tvLogProductName"
        app:layout_constraintBottom_toBottomOf="@+id/tvLogProductName"
        />

    <ImageButton
        android:id="@+id/ibtnLogRemove"
        android:src="@drawable/icon_remove"
        android:backgroundTint="@color/viewBackgroundPrimary"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>