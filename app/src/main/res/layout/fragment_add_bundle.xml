<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.FragmentAddProduct">

    <EditText
        android:id="@+id/etAddBundleName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:hint="Bundle Name"
        android:inputType="text"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnAddBundle"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddBundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Bundle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etAddBundleName"
        app:layout_constraintBottom_toBottomOf="@id/etAddBundleName"
        />

<!--    <AutoCompleteTextView-->
<!--        android:id="@+id/actvBundleAddProductName"-->
<!--        android:layout_margin="16dp"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/etAddBundleName"-->
<!--        app:layout_constraintLeft_toLeftOf="parent"-->
<!--        app:layout_constraintRight_toLeftOf="@+id/ibtnAddBundleAddPorduct"-->
<!--        />-->

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/ssBundleAddProductName"
        android:layout_margin="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etAddBundleName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ibtnAddBundleAddProduct"
        />

    <ImageButton
        android:id="@+id/ibtnAddBundleAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_temp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ssBundleAddProductName"
        app:layout_constraintBottom_toBottomOf="@+id/ssBundleAddProductName"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBundleProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ssBundleAddProductName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />




</androidx.constraintlayout.widget.ConstraintLayout>