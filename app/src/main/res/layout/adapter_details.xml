<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundSecondary"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvDetailCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/viewBackgroundPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Category name"
        />

    <TextView
        android:id="@+id/tvDetailCategoryPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/viewBackgroundPrimary"
        app:layout_constraintTop_toTopOf="@+id/tvDetailCategoryName"
        app:layout_constraintBottom_toBottomOf="@+id/tvDetailCategoryName"
        app:layout_constraintLeft_toRightOf="@id/tvDetailCategoryName"
        app:layout_constraintRight_toLeftOf="@+id/tvDetailCategoryAmount"
        android:text="Category Price"
        android:layout_marginLeft="8dp"
        />


    <TextView
        android:id="@+id/tvDetailCategoryAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/viewBackgroundPrimary"
        app:layout_constraintTop_toTopOf="@+id/tvDetailCategoryName"
        app:layout_constraintBottom_toBottomOf="@+id/tvDetailCategoryName"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:text="Category Amount"
        android:layout_marginLeft="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>