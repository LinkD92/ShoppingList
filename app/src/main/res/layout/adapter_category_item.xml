<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundSecondary"
    android:layout_margin="1dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/ibtnEditCategory"
        app:layout_constraintBottom_toBottomOf="@+id/ibtnEditCategory"
        app:layout_constraintRight_toLeftOf="@+id/ibtnEditCategory"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibtnEditCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:src="@drawable/icon_edit"
        android:tint="@color/black"
        android:backgroundTint="@color/viewBackgroundPrimary"
        app:layout_constraintTop_toTopOf="@id/ibtnRemoveCategory"
        app:layout_constraintBottom_toBottomOf="@+id/ibtnRemoveCategory"
        app:layout_constraintRight_toLeftOf="@+id/ibtnRemoveCategory"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibtnRemoveCategory"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/icon_remove"
        android:tint="@color/black"
        android:backgroundTint="@color/viewBackgroundPrimary"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>