<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityMain">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bnvBottomMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:itemTextColor="@color/bnv_selector"
                app:itemIconTint="@color/bnv_selector"
                app:menu="@menu/bottom_menu_items"
                />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFragmentContainerforBNV"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/teal_200"
                app:layout_constraintBottom_toTopOf="@id/bnvBottomMenu"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>